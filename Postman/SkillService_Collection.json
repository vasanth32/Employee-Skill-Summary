									"    if (csharpSkill) {",
									"        pm.environment.set('csharpSkillId', csharpSkill.skillId);",
									"        console.log('C# Skill ID:', csharpSkill.skillId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
